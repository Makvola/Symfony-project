{% extends 'base.html.twig' %}

{% block title %}liste membre{% endblock %}

{% block body %}
    <h1>Listes des membres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Pays</th>
                <th>Espace personnel</th>
            </tr>
        </thead>
        <tbody>
        {% for membre in membres %}
            <tr>
                <td>{{ membre.id }}</td>
                <td>{{ membre.nomMembre}}</td>
                <td>{{ membre.DescriptMembre}}</td>
                <td>{{ membre.paysMembre }}</td>
                <td>
                    <a href="{{ path('member_show', {'id': membre.id}) }}">Acc√©der</a>
                </td>
  
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
