 {% extends 'base.html.twig' %}

{% block body %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>carte n° {{ carte.id }} details</title>
    </head>
    <body>
        <h2>Les détails de la Carte :</h2>
        <ul>
            <dl>
                <dt>Nom du Joueur</dt>
                <dd>{{ carte.nomJoueur }}</dd>
                <dt>Pays </dt>
                <dd>{{ carte.pays }}</dd>
