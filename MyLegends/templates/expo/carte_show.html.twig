                <dd>{{ carte.maCollection.nomCollect }}</dd>
                <dt>Propriétaire de la Collection</dt>
                <dd>{{ carte.maCollection.member.nomMembre }}</dd>
            </dl>
        </ul>
    </body>
     <a href="{{ path('app_expo_show', { 'id': expo.id}) }}">back to exposition</a>
